

<div class="center">
  <br>
  <p class="title"><%= @post.title %></p>
  <br>
  <%= @post.text %>
  <br>
  <br>
  <% if current_user.id == @post.user_id %>
  <button class="button" type="button" name="button"> <%= link_to 'Edit', edit_post_path(@post) %></button>
  <button class="button" type="button" name="button"><%= link_to 'Delete', post_path(@post),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></button> 
  <% end %>
</div>
